include ../mixins/sub-menu.pug

header.header
    .container
        .row.align-items-center 
            .col-3
                .inner-logo
                    a(href="/")
                        img(src="/images/shopping.svg", alt="logo")

            .col-5  
                form(
                    action="/search"
                    method="GET"
                ) 
                    div(class="form-group d-flex mb-0")
                        input(
                            type="text"
                            placeholder="Nhập từ khóa ..."
                            class="form-control"
                            name="keyword"
                            value=keyword
                        )
                        button(
                            type="submit"
                            class="btn btn-primary"
                        ) Tìm

            .col-4 
                .inner-menu
                    ul 
                        li 
                            a(href="/") Trang chủ 
                        li(class="sub-menu")
                            -const pathArticle = "/articles"
                            a(href="/articles") Bài viết
                            if(layoutCategoryProducts)
                                +sub-menu(layoutCategoryProducts, pathArticle)
                        li(class="sub-menu")
                            -const pathProduct = "/products"
                            a(href="/products") Sản phẩm
                            if(layoutCategoryProducts)
                                +sub-menu(layoutCategoryProducts, pathProduct)
                        li
                            a(href="/cart") Giỏ hàng (#{miniCart ? miniCart.totalQuantity : "0"}) 
                        li 
                            a(href="/user/register") Đăng ký
                                                      


